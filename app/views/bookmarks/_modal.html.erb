<div class="modal fade" id="add_movie_modal" tabindex="-1" role="dialog" aria-labelledby="add_movie_modal_Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add_movie_modal_Label">Add movie to your <%= @list.name %> list </h5>
      </div>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <div class="modal-body">
            <%= f.association :movie, label: "Choose movie", required: true, input_html: { class: "form-control" } %>
            <%= f.input :comment, label: "Add your comment", required: true, input_html: { class: "form-control" } %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Add movie", class: "btn-custo" %>
            <button type="button" class="btn btn-custo-grey" data-bs-dismiss="modal">Back</button>
          </div>
        <% end %>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Save any kind of movies</strong>!</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between m-4">
    <h4>My Lists</h4>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-custo" %>
  </div>
  <div class="cards-wrapper">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key, crop: :fill) : asset_path('backup-photo-list.jpeg') %>')">
        <%= link_to list.name, list_path(list), class: "text-decoration-none color-white" %>
      </div>
    <% end %>
  </div>
</div>
